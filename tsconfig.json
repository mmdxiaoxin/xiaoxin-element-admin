{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vite/client",
      "element-plus/global"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
